@using SmartMonitoring.Client.Components.Admin

@page "/admin/admins/{ID:guid}/edit"
@page "/admin/admins/create"

@layout AdminLayout

<PageTitle>@PageTitle</PageTitle>

<MudGrid>
    <MudItem xs="12">
        <MudGrid>
            <MudItem>
                <MudFab DisableElevation="true"
                        StartIcon="@Icons.Material.Filled.ArrowBack"
                        Text="Назад" Href="/admin/users"/>
            </MudItem>
            <MudItem>
                <MudText Typo="Typo.h3">@PageTitle</MudText>
            </MudItem>
        </MudGrid>
    </MudItem>
    <MudItem>
        <AdminEditCard ID=@ID UseNavigations="true" NavigationUrl="/admin/users/{ID}/edit"/>
    </MudItem>
</MudGrid>