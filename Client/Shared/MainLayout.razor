@inherits LayoutComponentBase

<MudThemeProvider Theme="Themes.TerminalTheme"/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Elevation="0" Style="border-bottom-left-radius: 24px; border-bottom-right-radius: 24px">
        <MudButton Style="padding: 8px; border-radius: 18px"
                   Color="Color.Inherit"
                   OnClick="@((e) => DrawerToggle())">
            <MudIcon Icon="@Icons.Material.Filled.Menu"/>
        </MudButton>
        <MudSpacer/>
        <MudIconButton Icon="@Icons.Custom.Brands.Telegram" Color="Color.Inherit" Link="https://t.me/smartm0nitoringbot/" Target="_blank"/>
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Link="https://github.com/bryasnkfsp" Target="_blank"/>
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="1">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Smart Monitoring</MudText>
        </MudDrawerHeader>
        <NavMenu/>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-16 pt-16">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

}